generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  imageURL    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

generator client {
  provider = "prisma-client-js"
  seed     = "ts-node prisma/seed.ts"
}
